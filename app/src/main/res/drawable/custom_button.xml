<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="64dp" />
            <stroke android:width="1dip" android:color="#17c0eb" />
            <gradient android:angle="-90" android:startColor="#17c0eb" android:endColor="#17c0eb"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="64dp" />
            <stroke android:width="1dip" android:color="#17c0eb" />
            <solid android:color="#17c0eb"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="64dp" />
            <stroke android:width="1dip" android:color="#18DCFF" />
            <gradient android:angle="-90" android:startColor="#18DCFF" android:endColor="#18DCFF" />
        </shape>
    </item>
</selector>