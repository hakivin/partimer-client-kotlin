<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.szechuanstudio.kolegahotel">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.dashboard.history.state.HistoryStateActivity" />
        <activity android:name=".ui.dashboard.pending.PendingActivity" />
        <activity android:name=".ui.dashboard.history.HistoryActivity" />
        <activity android:name=".ui.dashboard.accepted.AcceptedActivity" />
        <activity
            android:name=".ui.dashboard.active.ActiveActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.main.ui.profile.documents.DocumentActivity" />
        <activity
            android:name=".ui.job.JobDetailActivity"
            android:label="@string/title_activity_job_detail"
            android:theme="@style/AppTheme.NoActionBar.Translucent" />
        <activity android:name=".ui.main.ui.profile.positions.UpdatePositionActivity" />
        <activity
            android:name=".ui.main.MainActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.main.ui.profile.update.UpdateProfileActivity" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar.White" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar.White">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>